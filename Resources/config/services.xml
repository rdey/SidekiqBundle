<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="redeye_sidekiq.predis.class">Predis\Client</parameter>
        <parameter key="redeye_sidekiq.pusher_client.class">SidekiqJobPusher\Client</parameter>
    </parameters>

    <services>
        <service id="redeye_sidekiq.predis" class="%redeye_sidekiq.predis.class%" public="false">
            <argument />
        </service>

        <service id="redeye_sidekiq" class="%redeye_sidekiq.pusher_client.class%">
            <argument type="service" id="redeye_sidekiq.predis" />
            <argument />
        </service>
    </services>
</container>
